{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	
	<div class="container mt-5">
		<div class="card d-flex justify-content-center col-10">
			<div class="row">
				<div class="col-4 d-flex align-self-center ">
					<img src="/img/{{article.imgArticle}}" class="img-fluid  g-0 p-0 " height="100%" width="auto" alt="...">
				</div>
				<div class="col-8">
					<div class="card-body container ">
						<h5 class="card-title">{{article.libelleArticle}}</h5>
						<p class="card-text">{{article.description}}</p>
						<div class= "row">
							<p class="card-text">Prix:{{article.prixAchat|number_format(2, ',', ' ')}}€</p>
							{% if quantite == 0 %}
								<a href="/panier_add/{{article.id}}" class="btn btn-outline-light">Ajouter au panier</a>
							{% endif %}
							{% if quantite != 0 %}
							<div class="row">
								<div class="col btn-group">
									<a href="{{ path('app_panier_remove_one', {id: article.id}) }}" class="btn btn-outline-light sousTitre" title='Diminuer la quantité'>-</a>
									<p class="text-center sousTitre col rounded m-auto">{{quantite}}</p>				
									<a href="{{ path('app_panier_add', {id: article.id}) }}" class="btn btn-outline-light sousTitre" title="Augmenter la quantité">+</a>
								</div>
							{% endif %}
			
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</div>

	{# <div class="card">
			<h5 class="text-center" style="">{{article.libelleArticle}}</h5>
			<a href='/panier_add/{{article.id}}' class="btn">Ajouter au panier</a>
		</div> #}
{% endblock %}
