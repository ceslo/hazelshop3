{% extends 'base.html.twig' %}

{% block title %}HazelShop
{% endblock %}

{% block body %}
	{# Caroussel #}
	<section class="container mt-4 border border-dark p-0">
		lalala
		<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"/>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"/>
				<button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"/>
			</div>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="../img/caroussel1.jpg" class="d-block w-100" alt="...">
					<div class="carousel-caption">
						<h1 class="titre-carousel">Bienvenue sur HazelShop</h1>
					</div>
				</div>
				<div class="carousel-item">
					<img src="../img/caroussel1.jpg" class="d-block w-100" alt="...">
				</div>
				<div class="carousel-item">
					<img src="../img/caroussel1.jpg" class="d-block w-100" alt="...">
				</div>
			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>
		</div>
	</section>

	{# Categories #}
	<section class="row">

		{% for cat in categories %}
			<a
				href="/catalogue/categorie/{{cat.id}}" class="m-auto card col-3 mt-4 ">
				{# <img class="card-img w-50" src="../img/{{ cat.imgCategorie}}" alt="Image {{ cat.libelleCategorie }}">          #}
				<h5 class="card-text titre d-flex align-items-center justify-content-center p-4" style="">{{cat.libelleCategorie}}</h5>
			</a>
		{% endfor %}

	</section>
{% endblock %}
